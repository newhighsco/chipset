{
  "name": "@newhighsco/chipset",
  "description": "Shareable, theme-able component library by New High Score",
  "version": "6.13.3",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "config": {
    "title": "Chipset",
    "logo": "https://chipset.newhighsco.re/logo.svg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/chipset.git"
  },
  "homepage": "https://chipset.newhighsco.re/",
  "bugs": {
    "url": "https://github.com/newhighsco/chipset/issues"
  },
  "main": "src/index.js",
  "files": [
    "src",
    "styles"
  ],
  "storybook": {
    "url": "https://main--6004028a0df11e0021f58df8.chromatic.com"
  },
  "scripts": {
    "start": "start-storybook --docs",
    "prebuild": "rm -rf build",
    "build": "build-storybook --output-dir build --docs --quiet",
    "pretest": "yarn lint",
    "test": "npm-run-all --parallel test:*",
    "test:js": "jest --maxWorkers=2 --coverage",
    "tdd": "yarn test:js --watch",
    "snapshot": "npm-run-all --parallel snapshot:*",
    "snapshot:chromatic": "chromatic --storybook-build-dir build --auto-accept-changes main --exit-once-uploaded",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ignore-path .gitignore --ext .js,.json,.jsx,.mdx .",
    "lint:css": "stylelint '**/*.{css,scss}' --cache --ignore-path .gitignore",
    "format": "npm-run-all --parallel format:*",
    "format:js": "yarn lint:js --fix",
    "format:css": "yarn lint:css --fix"
  },
  "dependencies": {
    "@dr.pogodin/react-themes": "1.3.3",
    "classnames": "2.3.1",
    "react-device-detect": "2.1.2"
  },
  "devDependencies": {
    "@babel/core": "7.16.10",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@commitlint/cli": "16.1.0",
    "@fullhuman/postcss-purgecss": "4.1.3",
    "@newhighsco/browserslist-config": "1.0.3",
    "@newhighsco/commitlint-config": "1.0.22",
    "@newhighsco/editor-config": "1.1.2",
    "@newhighsco/eslint-config": "2.3.58",
    "@newhighsco/postcss-config": "3.4.47",
    "@newhighsco/prettier-config": "2.0.16",
    "@newhighsco/release-config": "1.1.5",
    "@newhighsco/storybook-preset": "4.4.16",
    "@newhighsco/stylelint-config": "3.0.9",
    "@storybook/react": "6.4.14",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.6",
    "babel-jest": "27.4.6",
    "babel-loader": "8.2.3",
    "chromatic": "6.4.1",
    "enzyme": "3.11.0",
    "eslint": "8.7.0",
    "husky": "7.0.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.4.7",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass-true": "6.0.1",
    "semantic-release": "19.0.2",
    "stylelint": "14.2.0",
    "webpack": "5.67.0"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "browserslist": [
    "extends @newhighsco/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco/eslint-config/react"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ]
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
